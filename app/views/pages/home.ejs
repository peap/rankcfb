<% include ../common/header %>

<div class="jumbotron">
  <h1>Welcome to RankCFB</h1>
  <% if (user) { %>
    <p class="lead">
      Welcome back, <%=user.firstName%>.
    </p>
    <p>
      Now, create some rankings!
    </p>
  <% } else { %>
    <p class="lead">
      RankCFB is an interactive college football polling application. Create
      and tweak your own rankings using data straight from the NCAA. Compare
      your rankings to the AP, Coaches, and College Football Playoff polls.
    </p>
    <p>
      <a class="btn btn-lg btn-success" href="/signin" role="button">Sign in</a>
      <a class="btn btn-lg btn-success" href="/oauth/google" role="button">Sign in with Google</a>
      <a class="btn btn-lg btn-primary" href="/signup" role="button">Sign up</a>
    </p>
  <% } %>
</div>

<% include ../common/footer %>
